<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mydraw2"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        
        >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/linear"
            android:gravity="center"
            android:elevation="40dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Day"
                android:textColor="#E4E2E2"
                android:textColorHighlight="#D10F0F"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTempF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Temp"
                android:textColor="#E4E2E2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvhumi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Humidity"
                android:textColor="#E4E2E2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_currTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="C"
                android:textColor="#D6D6D6"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="200dp"
                android:layout_height="155dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:srcCompat="@drawable/heavyrain" />

            <TextView
                android:id="@+id/tvcond"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="condition"
                android:textColor="#DDDDDD"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>